{
  "name": "tts-dev-helper",
  "version": "0.1.5",
  "description": "A simple CLI app to help make development, with version control, easier for Tabletop Simulator",
  "author": "OhYea777",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OhYea777/tts-tools.git",
    "directory": "packages/tts-dev-helper"
  },
  "bugs": "https://github.com/OhYea777/tts-tools/issues",
  "homepage": "https://github.com/OhYea777/tts-tools/tree/main/packages/tts-dev-helper#readme",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "dist/index.js",
  "bin": {
    "tts-dev-helper": "./dist/index.js"
  },
  "scripts": {
    "build": "pnpm types && swc src -d dist --strip-leading-paths",
    "types": "tsc --project src --declaration --emitDeclarationOnly",
    "check-types": "tsc --no-emit"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "tts",
    "tabletop-simulator",
    "version-control",
    "cli",
    "development"
  ],
  "dependencies": {
    "@matanlurey/tts-editor": "github:matanlurey/tts-editor#dist",
    "@matanlurey/tts-runner": "github:matanlurey/tts-runner#dist",
    "@tts-tools/savefile": "^2.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.6.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.9",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.18.2"
  }
}
